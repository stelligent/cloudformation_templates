        "Owner" : { "default" : "Team or Individual Owner" },
        "DeleteAfter" : { "default" : "Delete After Date" },
        "RHELSubnet" : { "default" : "Subnet for RHEL" },
        "UbuntuSubnet" : { "default" : "Subnet for Ubuntu" },
        "WindowsSubnet" : { "default" : "Subnet for Windows" },
        "InternalAccessSecurityGroup" : { "default" : "Instance Security Group" },
        "RemoteSecurityGroup" : { "default" : "Remote Security Group" },
        "Ec2KeyPair" : { "default" : "EC2 Access Keypair" },
        "InstanceTypeRHEL7" : { "default" : "Instance Type for RHEL" },
